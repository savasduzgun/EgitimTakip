<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-gradient-success text-white fs-3">
                <box-icon name="book-bookmark" color="white" size="sm" animation="tada"></box-icon> Eğitim Kategorileri
            </div>
            <div class="card-body">

                <table id="tblTrainingCategories" class="table table-bordered table-hovered table-striped">
                </table>


            </div>
        </div>





    </div>
</div>

@section Scripts {
    <script>
        var DataTable = "";
        $(document).ready(() => {

            DataTable = $("#tblTrainingCategories").DataTable({

                ajax: '/TrainingCategory/GetAll',
                columns: [
                    { data: 'id', title: 'ID' },
                    { data: 'name', title: 'Kategori Adı' },
                    {
                        data: 'id', title: 'İşlemler', render: (data) => {

                            return `<a class="me-4" title="Sil" href="#"><box-icon name="trash-alt" color="red" size="sm" class="bx-burst-hover"></box-icon></a>
                                            <a title="Düzenle" href="#"><box-icon name="pencil" color="blue" size="sm" class="bx-burst-hover"></box-icon></a>`;
                        }
                    }
                ]
            });


        });



    </script>
}